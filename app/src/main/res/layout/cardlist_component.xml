<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardlist_component"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input your Card List Title"
        android:id="@+id/input_cardlist_box"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/add_cardlist_button"
        android:text="Add Card List"
        android:layout_gravity="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No card List!"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="@dimen/fab_margin"
        android:id="@+id/no_card_list_label"/>

    <TextView
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/cardlist_title"
        android:layout_alignParentTop="true"
        android:clickable="false" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardlist_createtime"
        android:layout_below="@id/cardlist_title"
        android:layout_gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/addCardBox"
        android:layout_below="@+id/cardlist_list">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_card_button"
            android:text="Add card"
            android:gravity="center"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Title"
            android:id="@+id/card_id_input"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Description"
            android:id="@+id/card_description_input"
            />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/cardlist_list"
        android:textAlignment="center"
        android:layout_gravity="center"
        ></ListView>

</LinearLayout>