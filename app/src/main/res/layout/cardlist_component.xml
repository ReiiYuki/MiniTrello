<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardlist_component"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    >
    <TextView
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/cardlist_title"
        android:layout_alignParentTop="true"
        android:clickable="false" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardlist_createtime"
        android:layout_below="@id/cardlist_title"
        android:layout_gravity="center" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardlist_list"
        android:textAlignment="center"
        android:layout_below="@id/cardlist_createtime"
        android:layout_gravity="center"></ListView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_card_button"
        android:text="Add card"
        android:gravity="center"
        android:layout_gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/createcardbox"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:clickable="false">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Title"
            android:id="@+id/card_id_input"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Description"
            android:id="@+id/card_description_input"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Card"
            android:id="@+id/add_new_card_button"/>
        >
    </LinearLayout>
</LinearLayout>